#!/usr/bin/env groovy
import org.apache.tomcat.jni.Library

//@Library('jenkins-shared-library')_
@Library('jenkins-shared-library')
def gv

pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Build jar') {
            steps {
                script {
                    buildJar()
                }
            }
        }

        stage('Build image') {
            steps {
                script {
                    buildImage '123456789mehdibirouk/demo-app:jma-2.0'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying to ..."
            }
        }
    }
}
