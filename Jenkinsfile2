
pipeline {
agent any

tools {
maven 'Maven'
}

    stages {
        stage('Build jar') {
            steps {
                script {
                    echo "Building the application"
                }
            }
        }

                stage('Build image') {
                    steps {
                        script {
                            echo "Building the docker image"
                         withCredentials([
                                        usernamePassword(credentials: 'docker-hub-repo', usernameVariable: USER, passwordVariable: PWD)
                                ]) {
                                    sh 'docker build -t 123456789mehdibirouk/demo-app:jma-2.0 .'
                                    sh "echo $PWD | docker login -u $USER --password-stdin"
                                    sh 'docker push 123456789mehdibirouk/demo-app:jma-2.0'
                                }
                        }
                    }
                }
        stage('Deploy') {
            steps {
                echo "Deploying to ..."
            }
        }
    }
}
